/* Base styles for the Pieces CLI TUI application */

/* Root application styles */
Screen {
  background: $background;
  color: $text;
}

/* Layout containers */
.chat-container {
  dock: top;
  height: 1fr;
}

/* Input area at bottom - above status bar */
.input-container {
  dock: bottom;
  height: 3;
  background: $surface;
  border-top: solid $primary;
}

/* Status bar styles - at very bottom */
.status-bar {
  dock: bottom;
  height: 1;
  background: $surface;
  border-top: solid $secondary;
  padding: 0 1;
  width: 100%;
}

/* Status text widget inside footer */
.status-text {
  width: auto;
  height: 1;
  background: $footer-background;
  color: $footer-foreground;
  padding: 0 1;
  margin-right: 2;
}

/* Focus styles for better UX - using Textual's built-in :focus */
*:focus {
  border: solid $accent;
  border-title-color: $accent;
}

/* Specific focus styles for panels */
ChatListPanel:focus {
  border: solid $accent;
  border-title-color: $accent;
  border-title-style: bold;
}

ChatViewPanel:focus {
  border: solid $accent;
  border-title-color: $accent;
  border-title-style: bold;
}

/* Global utilities */
.hidden {
  display: none;
}

.highlighted {
  background: $accent;
  color: $text;
}

.error {
  color: $error;
  text-style: bold;
}

.success {
  color: $success;
  text-style: bold;
}

.warning {
  color: $warning;
  text-style: bold;
}
