/* Chats panel styles */

/* Main chats panel */
ChatListPanel {
    width: 25%;
    border: solid $secondary;
    border-title-color: $secondary;
    border-title-style: bold;
    scrollbar-background: $surface;
    scrollbar-color: $secondary;
    scrollbar-color-hover: $accent;
}

/* Focus styling for chat list panel */
ChatListPanel:focus {
    border: solid $accent;
    border-title-color: $accent;
    border-title-style: bold;
}

/* New chat button container */
.new-chat-container {
    padding: 1;
    height: 3;
    margin: 0 0 1 0;
    width: 100%;
}

.new-chat-btn {
    width: 100%;
    height: 1;
    border: solid $primary;
    background: $surface;
    color: $primary;
    text-style: bold;
}

.new-chat-btn:hover {
    background: $primary;
    color: $background;
}

.new-chat-btn:focus {
    border: solid $accent;
    background: $accent;
    color: $text;
    text-style: bold;
}

/* Chats list container */
.chats-list {
    width: 100%;
    height: 1fr;
    overflow-y: auto;
}

.empty-chats {
    width: 100%;
    text-align: center;
    padding: 2;
    color: $text-muted;
    text-style: italic;
    height: auto;
}

/* Individual chat items */
.chat-item {
    width: 100%;
    height: auto;
    min-height: 3;
    margin: 0 0 1 0;
    padding: 0;
    border: none;
    background: $surface;
}

.chat-item:hover {
    background: $surface-active;
}

.chat-item.chat-active {
    border-left: thick $primary;
    background: rgba(30, 144, 255, 0.1);
}

.chat-item.chat-active:hover {
    background: rgba(30, 144, 255, 0.2);
}

/* Chat content */
.chat-content {
    padding: 1;
    width: 100%;
    height: auto;
}

.chat-title {
    text-style: bold;
    color: $text;
    height: 1;
    width: 100%;
}

.chat-active .chat-title {
    color: $primary;
}

.chat-summary {
    color: $text-muted;
    text-style: italic;
    margin: 1 0 0 0;
    height: auto;
    width: 100%;
}

.chat-active .chat-summary {
    color: rgba(30, 144, 255, 0.8);
}

/* Chat selection highlighting */
.chat-selected {
    background: $accent !important;
    color: $text !important;
}

.chat-selected .chat-title {
    color: $text !important;
}

.chat-selected .chat-summary {
    color: $text-muted !important;
} 